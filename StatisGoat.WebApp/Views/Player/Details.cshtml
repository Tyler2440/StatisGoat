@using Newtonsoft.Json
@using StatisGoat.Player_Statistics;
@model StatisGoat.WebApp.Models.Player

@{
    ViewData["Title"] = "Details";
}

<div class="text-center mb-4">
    <h1>Player Details:</h1>
</div>
<script>var data = @Html.Raw(JsonConvert.SerializeObject(Model))</script>

    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-5">
                    <div class="row">
                        <div class="col-7 about-avatar align-middle text-center">
                            <img class="player-image" style="width:200px; border: solid black 5px" src=@Model.Headshot><p></p>
                        </div>
                        <div class="col-5">
                            <div class="media">
                                <label>Name:&nbsp;</label>
                                <p>@Model.First @Model.Last</p>
                            </div>
                            <div class="media">
                                <label>Birthday:&nbsp;</label>
                                <p>@Model.DOB</p>
                            </div>
                            <div class="media">
                                <label>Age:&nbsp;</label>
                                <p>@Model.Age</p>
                            </div>
                            <div class="media">
                                <label>Nationality:&nbsp;</label>
                                <p>@Model.Nationality</p>
                            </div>
                            <div class="media">
                                <label style="margin-top:35px;">Team:&nbsp;</label>
                                <a asp-controller="Team" asp-action="Details" asp-route-id=@Model.TID>@Model.Teamname<img class="team-image" width="100" height="100" src=@Model.Badge /></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-7">
                    <div id="playerChartDiv" class="row mb-4 center-div">
                        <svg id="playerStatChart"></svg>
                    </div>
                    <div class="row center-div">
                        <div id="sort-by-buttons" class="playerStatSorting btn-group-horizontal align-items-center" style="width: fit-content;">
                            <button type="button" class="btn btn-secondary active">Goals</button>
                            <button type="button" class="btn btn-secondary">Passes</button>
                            <button type="button" class="btn btn-secondary">Shots</button>
                            <button type="button" class="btn btn-secondary ">Assists</button>
                            <button type="button" class="btn btn-secondary">Dribbles</button>
                            <button type="button" class="btn btn-secondary ">Saves</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="container">

        </div>
    </section>

<script src="/js/Players.js"></script>